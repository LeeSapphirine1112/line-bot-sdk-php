require_once('./LINEBotTiny.php');

$channelAccessToken = '<Nqn+jOnUnybget/JIZ6szJM7/4/Zz0wB2CPL32BH7pu4LGpAFMJiuQhNl7Cvp8BroS5rIoVq91bXrB0Dwgx5cd9FjKm3ausBxNM53YthWalC8aBY9rfg2wAGaOc9Us2FAm21g5kEmhqIywgkkEX8EgdB04t89/1O/w1cDnyilFU=>';
$channelSecret = '<a2ee7ff4c713bdb6a020ab3bbbfeb4fa>';

$client = new LINEBotTiny($channelAccessToken, $channelSecret);
foreach ($client->parseEvents() as $event) {
    switch ($event['type']) {
        case 'message':
            $message = $event['message'];
            switch ($message['type']) {
                case 'text':
                    $client->replyMessage([
                        'replyToken' => $event['replyToken'],
                        'messages' => [
                            [
                                'type' => 'text',
                                'text' => $message['text']
                            ]
                        ]
                    ]);
                    break;
                default:
                    error_log('Unsupported message type: ' . $message['type']);
                    break;
            }
            break;
        default:
            error_log('Unsupported event type: ' . $event['type']);
            break;
    }
};
